{
  "name": "Privacy Shield",
  "version": "1.0.0",
  "description": "A Google Chrome Privacy Extension",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Privacy Shield",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts" : [
      "js/background.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "webRequest"
  ]
}
